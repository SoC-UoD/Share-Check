package com.agile.share.check.Stock;

import junit.framework.TestCase;


public class ShareCheckTesting extends TestCase {
       
	/** testEmptyGame 
	 * 	
	 *  If no game is provided, score should be -1 (error)   
	 */	     
	ShareCheck sharecheck;
	StockBean [] stockBeans;
	
	public ShareCheckTesting()
	{
		String [] stockSymbols  = new String [5];
		int [] stockShares = new int [5];
		stockSymbols[0] = "BP.L";
		stockSymbols[1] = "HSBA.L";
		stockSymbols[2] = "EXPN.L";
		stockSymbols[3] = "MKS.L";
		stockSymbols[4] = "SN.L";
		
		stockShares[0] = 192;
		stockShares[1] = 343;
		stockShares[2] = 258;
		stockShares[3] = 485;
		stockShares[4] = 1219;	
		
		stockBeans = new StockBean [5];
		sharecheck = new ShareCheck(stockSymbols, stockShares);
		sharecheck.requestStockDetails();
		sharecheck.printStockDetails();
		sharecheck.printStockPortfolioValue();	
		
		
	}
	
	public void testEmptyShares() {
        assertEquals(0, 0);  
    }
	
	public void testShares() {
        assertEquals(1545055.6f, sharecheck.getStockTotalValue(), 0.0f);  
    }
	
	public void testStockSymbols()
	{
		System.out.println("Symbol"+sharecheck.getStockSymbol(0));
		assertEquals("BP.L", sharecheck.getStockSymbol(0));
		
	}
}